package tegarsinabolangzakatmaal;

import java.util.Scanner;

public class Tegarsinabolangzakatmaal {


    public static void main(String[] args) {
        // Membuat scanner untuk input pengguna
        Scanner input = new Scanner(System.in);

        // Meminta pengguna memasukkan jumlah harta dalam bentuk desimal
        System.out.print("Masukkan jumlah harta (rupiah) yang dimiliki: ");
        double harta = input.nextDouble();

        // Menghitung zakat 2.5% dari total harta
        double zakat = harta * 2.5 / 100;

        // Menampilkan jumlah zakat yang harus dibayarkan
        System.out.printf("Jumlah zakat yang harus dibayarkan: %.2f%n", zakat);

        // Menutup scanner
        input.close();
    }
}

